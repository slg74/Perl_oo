#!/usr/bin/perl

use strict;
use warnings;
use feature 'say';
use feature 'switch';
#use lib 'lib';
use Animal::Cat;

my $whiskers = new Animal::Cat("whiskers", "Bunneh"); 

say $whiskers->getName();

$whiskers->setName("Whiskers");

say $whiskers->getName();

say $whiskers->getSound(); 

use Animal::Lion;

my $king = new Animal::Lion("King", "No Owner"); 

say $king->getSound(); 

say $king->getOwner(); 

say $whiskers->getOwner(); 

